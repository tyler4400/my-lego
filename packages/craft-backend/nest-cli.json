{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "..",
  "entryFile": "craft-backend/src/main",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true,
    "assets": [
      {
        "include": "craft-backend/views/**/*",
        "outDir": "dist"
      },
      {
        "include": "craft-backend/static/**/*",
        "outDir": "dist"
      }
    ]
  }
}
